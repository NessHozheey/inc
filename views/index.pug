  script. 

    $(() => {
      function slideDownDivOntitle(){
        $(".div-ontitle-h2").fadeIn(700)
      }
      $(".div-ontitle-h1").animate({
        opacity: '1'
      }, 800)
      setTimeout(slideDownDivOntitle, 500)
      
      function arrowAnimation () {
        if ($(document).width() > 1000) {
          $(".div-ontitle-arrow").animate({
            bottom: '20%',
            opacity: '1'
          }, 1000)
          $(".div-ontitle-arrow").animate({
            bottom: '10%',
            opacity: 0
          }, 500)}
        else {
          $(".div-ontitle-arrow").animate({
            bottom: '20%',
            opacity: '1'
          }, 1000)
          $(".div-ontitle-arrow").animate({
            bottom: '10%',
            opacity: 0
          }, 500)
        } 
      
      }

      setTimeout(arrowAnimation, 1000)
      setInterval(arrowAnimation, 3000)
      
      
